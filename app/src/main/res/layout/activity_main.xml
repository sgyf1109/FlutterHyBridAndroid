<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/navigationFlutterOne"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="新版FlutterView方式添加Flutter界面" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />
            <TextView
                android:id="@+id/navigationFlutterTwo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="新版FlutterFragment方式添加Flutter界面" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />
            <TextView
                android:id="@+id/navigationFlutterThird"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="FlutterActivity方式添加Flutter界面" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />
            <TextView
                android:id="@+id/navigationWb"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="仿微博项目" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>